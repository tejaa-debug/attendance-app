<body>

  <h2>üìä Attendance System</h2>

  <!-- Main Menu -->
  <div id="menu" class="menu">
    <div class="box" onclick="showSection('attendanceBox')">‚úÖ Take Today‚Äôs Attendance</div>
    <div class="box" onclick="showSection('reportBox')">üìÖ Full Daily Reports</div>
  </div>

  <!-- Attendance Box -->
  <div id="attendanceBox" class="hidden">
    <h3>Mark Attendance for Today</h3>
    <table>
      <tr><th>Name</th><th>Present</th></tr>
      <tr><td>Amit</td><td><input type="checkbox" id="Amit"></td></tr>
      <tr><td>Tejal</td><td><input type="checkbox" id="Tejal"></td></tr>
      <tr><td>Riya</td><td><input type="checkbox" id="Riya"></td></tr>
      <tr><td>Raj</td><td><input type="checkbox" id="Raj"></td></tr>
      <tr><td>Sohan</td><td><input type="checkbox" id="Sohan"></td></tr>
    </table>
    <button onclick="saveAttendance()">üíæ Save Attendance</button>
    <button onclick="goBack()">‚¨Ö Back</button>
  </div>

  <!-- Report Box -->
  <div id="reportBox" class="hidden">
    <h3>üìÖ Attendance Reports</h3>
    <div id="reportContent">No reports yet.</div>
    <button onclick="goBack()">‚¨Ö Back</button>
  </div>

  <script>
    let history = [];

    function showSection(sectionId) {
      document.getElementById("menu").style.display = "none";
      document.getElementById(sectionId).style.display = "block";
    }

    function goBack() {
      document.querySelectorAll('.hidden').forEach(el => el.style.display = "none");
      document.getElementById("menu").style.display = "flex";
    }

    function saveAttendance() {
      let students = ["Amit", "Tejal", "Riya", "Raj", "Sohan"];
      let today = new Date().toLocaleDateString();
      let present = [];
      let absent = [];

      students.forEach(name => {
        let status = document.getElementById(name).checked ? "Present" : "Absent";
        if (status === "Present") present.push(name);
        else absent.push(name);
      });

      history.push({ date: today, present, absent });

      // Update reports
      let html = "";
      history.forEach(r => {
        html += `<div class="report-entry"><b>${r.date}</b><br>
                 ‚úÖ Present: ${r.present.join(", ") || "None"}<br>
                 ‚ùå Absent: ${r.absent.join(", ") || "None"}</div>`;
      });
      document.getElementById("reportContent").innerHTML = html;

      alert("‚úÖ Attendance saved!");
      goBack();
    }
  </script>

